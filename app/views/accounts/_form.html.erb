





  <%= form_with(model: account, local: true) do |form| %>
  <% if account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(account.errors.count, "error(s)") %> ao salvar:</h2>

      <ul>
        <% account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
                  <br>
                  <div class="row">
                  <div class="col-lg-12 form-group">   
                    <%= form.label :nome,"Nome", :class => 'control-label' %>
                    <%= form.text_field :nome, :class => 'form-control' %>
                  </div>
                  </div>
                  
                  <div class="row">
                  <div class="col-lg-6 form-group">   
                    <%= form.label :telefone,"Telefone", :class => 'control-label' %>
                    <%= form.text_field :telefone, :class => 'form-control', :onkeypress=>"mascara(this, '## #####-####')", :maxlength=>"13" %>
                  </div>
                  <div class="col-lg-6 form-group">   
                    <%= form.label :cpf,"CPF", :class => 'control-label' %>
                    <%= form.text_field :cpf, :class => 'form-control', :onkeypress=>"mascara(this, '###.###.###-##')", :maxlength=>"14"%>
                  </div>
                  </div>
                  <div class="row">
                  <div class="col-lg-12 form-group">   
                    <%= form.label :email,"Email", :class => 'control-label' %>
                    <%= form.text_field :email, :class => 'form-control' %>
                  </div>
                  </div>
                  <div class="row">
                  <div class="col-lg-8 form-group">   
                    <%= form.label :password,"Senha", :class => 'control-label' %>
                    <%= form.password_field :password, :class => 'form-control' %>
                  </div>
                  </div>
                    <div class="form-group" >
                        <!-- Button -->
                        <div class="col-sm-12 controls">
                            <%= form.submit "Salvar", class: "btn btn-success" %>
                        </div>                         
                    </div>
                   <% end -%>
      