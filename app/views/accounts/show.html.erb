



<div class="container col-md-4 col-md-offset-8 form-submit" style="margin: 0 auto; float: none; margin-top: 2%"> 
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                
                <br>
                    <h3><b>Transferência Realizada</b></h3>
                    <p>
                     <h5> <strong>Favorecido: </strong>
                      <%= @transfer.transferaccounts[0].account.nome%></h5>
                    </p>
                    <p>
                     <h5> <strong>Valor: </strong>
                      <%= @transfer.valor.to_money('BRL').format%></h5>
                    </p>

                    <p>
                      <strong>Horário da Transferência:</strong>
                      <%= @transfer.created_at.strftime("%d/%m/%Y %H:%M:%S ") %>
                    </p>
                     <%= link_to 'Menu Principal', accounts_path,:class=>"btn btn-outline-primary", :role=>"button"%>
           
            </div>
        </div>
    </div>
</div>
</div>