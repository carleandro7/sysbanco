<%= form_with(model: deposito, local: true) do |form| %>
  <% if deposito.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(deposito.errors.count, "error") %></h2>

      <ul>
        <% deposito.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
      <div class="col-lg-10 form-group">   
          <%= form.label :account_id,"Favorecido", :class => 'control-label' %>  
          <%= form.collection_select :account_id, listaAccount, :id, :nome, {:prompt => false}, :class => 'form-control ' %>
    </div>
  </div>
  <div class="row">
      <div class="col-lg-10 form-group">   
          <%= form.label :valor,"Valor R$", :class => 'control-label' %>
          <input name="deposito[valor]" class="form-control " pattern="^\d*(\,\d{0,2})?$"  placeholder="0,00"/>
      </div>
  </div>
  
  
  <div class="form-group" >
      <div class="col-sm-12 controls">
          <%= form.submit "Enviar", class: "btn btn-success" %>
      </div>                         
 </div>

<% end %>


